{
  "name": "@kdc-cms/server",
  "version": "0.1.0",
  "description": "API for kdc-cms",
  "main": "index.js",
  "scripts": {
    "start": "npm run ddb:start && npm run ddb:wait && PORT=8101 nodemon dev.js",
    "ddb:setup": "npm run ddb:start && npm run ddb:wait && npm run ddb:init",
    "ddb:start": "docker-compose up -d",
    "ddb:wait": "until nc -z localhost 8000; do sleep 1; done && echo \"DynamoDB started\"",
    "ddb:init": "aws dynamodb create-table --cli-input-json file://schema.json --endpoint-url http://localhost:8000",
    "ddb:stop": "docker-compose stop",
    "test": "mocha --watch",
    "coverage": "nyc mocha --exit",
    "build": "mkdir -p build && cp -R lambda.js app.js package.json package-lock.json routes models build/ && cd build && npm install --production",
    "cleanZip": "rm -fR kdc-cms-server.zip build VERSION",
    "zip": "cd build && zip -r ../kdc-cms-server.zip *"
  },
  "author": {
    "name": "Ian Dela Cruz",
    "email": "ian@kdcsoftware.com",
    "url": "https://www.kdcsoftware.com"
  },
  "license": "MIT",
  "private": true,
  "dependencies": {
    "aws-sdk": "^2.538.0",
    "aws-serverless-express": "^3.3.6",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-jwt": "^5.3.1",
    "helmet": "^3.21.1",
    "http-status-codes": "^1.3.2",
    "morgan": "^1.9.1",
    "response-time": "^2.3.2"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "debug": "^4.1.1",
    "eslint": "^6.5.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "mocha": "^6.2.0",
    "nodemon": "^1.19.2",
    "nyc": "^14.1.1",
    "supertest": "^4.0.2"
  }
}
