{
  "name": "kdc-cms",
  "version": "0.1.0",
  "description": "Serverless Headless CMS",
  "main": "index.js",
  "scripts": {
    "dev": "next dev -p 1001",
    "build": "next build",
    "start": "next start",
    "setup": "npm run start-ddb && npm run wait-ddb && npm run init-ddb",
    "start-ddb": "docker-compose up -d",
    "wait-ddb": "until nc -z localhost 8000; do sleep 1; done && echo \"DynamoDB started\"",
    "stop-ddb": "docker-compose stop",
    "init-ddb": "aws dynamodb create-table --cli-input-json file://data/schema.json --endpoint-url http://localhost:8000",
    "test": "mocha"
  },
  "author": {
    "name": "Ian Dela Cruz",
    "email": "ian@kdcsoftware.com",
    "url": "https://www.kdcsoftware.com"
  },
  "license": "UNLICENSED",
  "private": true,
  "devDependencies": {
    "chai": "^4.2.0",
    "cz-conventional-changelog": "^3.0.2",
    "eslint": "^6.4.0",
    "mocha": "^6.2.0",
    "next-server": "^9.0.5",
    "serverless": "^1.53.0",
    "serverless-nextjs-plugin": "^2.3.8",
    "supertest": "^4.0.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "aws-sdk": "^2.537.0",
    "install": "^0.13.0",
    "next": "^9.0.6",
    "npm": "^6.11.3",
    "react": "^16.9.0",
    "react-dom": "^16.9.0"
  }
}
